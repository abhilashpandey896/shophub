<%= form_with model: [@product, @review] do |form| %>
     
        <div class = "col-lg-4">
           <div class = "form-group">
           <%= form.label :description, class: 'mb-2'%>
           <%= form.text_field :description,class: 'form-control,form-control-lg' %>
           
        </div>

    </div>
     <div class = "row">
      <div class = "col-lg-12 mt 4" >
      <%= form.submit class: 'btn btn-primary btn-lg rounded-0' %>
      </div>
      </div>
      <%= form.hidden_field :user_id, value: current_user.id %>
    <% end %>